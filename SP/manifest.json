{
  "manifest_version": 2,
  "name": "Domain Logger",
  "version": "1.0",
  "description": "Log domain names entered in the address bar.",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }

}
